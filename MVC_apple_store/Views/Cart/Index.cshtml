@model IEnumerable<DataAccess.Entities.Phone>;

<div class="card text-center">
    <div class="card-header">
        My Cart
    </div>
    <div class="card-body">
        <h5 class="card-title">Product List</h5>
        
        <ul class="list-group my-3">
            @foreach (var phone in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@phone.Model</strong>
                        <span>@phone.Memory GB</span>
                    </div>
                    <span class="badge bg-primary rounded-pill">@phone.Price$</span>
                </li>
            }
        </ul>

        <a href="#" class="btn btn-primary">
            <i class="bi bi-bag-check"></i> Confirm
        </a>
    </div>
    <div class="card-footer text-muted">
        Total items: @Model.Count()
    </div>
</div>