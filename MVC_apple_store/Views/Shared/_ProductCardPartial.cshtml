@model DataAccess.Entities.Phone;

<div class="col">
    <div class="card h-100 text-center">
        <img src="@Model.ImagePath" class="card-img-top p-3" alt="Product Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Model</h5>
            <h6 class="card-text">@Model.Color?.Name</h6>
        </div>
        <div class="card-footer">
            <p class="card-text">@Model.Price$</p>
            <a asp-controller="Phones" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Details</a>
        </div>
    </div>
</div>